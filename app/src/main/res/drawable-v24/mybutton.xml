<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="@color/royalblue" />
            <gradient android:angle="-90" android:startColor="@color/royalblue" android:endColor="#689a92" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="@color/royalblue" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="10dp" />
            <stroke android:width="2dip" android:color="#BAA3EF" />
            <gradient android:angle="-90" android:startColor="#3BA5EC" android:endColor="@color/royalblue" />
        </shape>
    </item>
</selector>